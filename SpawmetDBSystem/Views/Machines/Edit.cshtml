@model SpawmetDBSystem.Models.Machine

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/Plain.cshtml";
}

<style>
.form-select {
    width: 100%;
    height: 40px;
    color: white;
    background-color: #111111;
    border: none;
    border-radius: 10px 10px 10px 10px;
    font-size: 24px;
    margin-top: 20px;
    padding: 5px 10px 5px 10px;
}

.form-option {
    border: none;
}

.login-input-blocked {
    background-color: #222222;
    color: #bbbbbb;
}
</style>

<div id="nav-bar-container">
    <button id="nav-bar-back-button" class="nav-bar-button"><</button>
    <button id="nav-bar-title">Maszyny - edytuj</button>
</div>

<form action="/Machines/EditResult/" method="POST" id="login-form">
    <div>
        <input readonly="true" type="text" name="id" value="@Model.ID" class="login-input login-input-blocked"/>
    </div>
    <div>
        <input type="text" name="name" value="@Model.Name" class="login-input"/>
    </div>
    <div>
        <input type="text" name="price" value="@Model.Price" class="login-input"/>
    </div>
    <input type="submit" value="ok" class="login-submit"/>
</form>

<script>
    $(document).ready(function() {
        $("#nav-bar-back-button").click(function() {
            window.location = "/Machines/";
        });

        $(".login-input-blocked").click(function(event) {
            event.preventDefault();
        });
    });
</script>