@model List<SpawmetDBSystem.Models.UserGroup>

@{
    Layout = "/Views/Layouts/Plain.cshtml";
    ViewBag.Title = "Dodaj użytkownika";
}

<style>
.form-select {
    width: 100%;
    height: 40px;
    color: white;
    background-color: #111111;
    border: none;
    border-radius: 10px 10px 10px 10px;
    font-size: 24px;
    margin-top: 20px;
    padding: 5px 10px 5px 10px;
}

.form-option {
    border: none;
}

</style>

<div id="nav-bar-container">
    <button id="nav-bar-back-button" class="nav-bar-button"><</button>
    <button id="nav-bar-title">Użytkownicy - dodaj</button>
</div>

<form action="/Users/Create/" method="POST" id="login-form">
    <div>
        <input type="text" name="login" value="Login" class="login-input"/>
    </div>
    <div>
        <input type="text" name="password" value="Hasło" class="login-input"/>
    </div>
    <div>
        <select name="groupName" class="form-select">
            @foreach (var userGroup in Model)
            {
                <option class="form-option">@userGroup.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="DODAJ" class="login-submit" />
</form>

<script>
    $(document).ready(function() {
        $("#nav-bar-back-button").click(function() {
            window.location = "/Users/";
        });
    });
</script>