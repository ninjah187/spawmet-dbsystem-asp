@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Layouts/Plain.cshtml";
}

<style>

</style>

<h2 style="margin-bottom: -60px;">LOGOWANIE</h2>

<form action="/Users/LoginResult/" method="POST" id="login-form">
    <div>
        <input type="text" name="login" value="Login" class="login-input" />
    </div>
    <div>
        <input type="text" name="password" value="Hasło" class="login-input" id="password" />
    </div>
    <input type="submit" value="ZALOGUJ" class="login-submit" />
</form>

<script>
    $(document).ready(function() {
        $(".login-input").css({
            color: "#aaaaaa"
        });

        $(".login-input").focus(function () {
            $(this).attr("value", "");
            $(this).css("color", "white");
        });

        $("#password").focus(function() {
            var pass = document.getElementById("password");
            pass.type = "password";
        });
    });
</script>