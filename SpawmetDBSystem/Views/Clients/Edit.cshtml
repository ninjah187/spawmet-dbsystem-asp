@model SpawmetDBSystem.Models.Client

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/Plain.cshtml";
}

<style>
.form-select {
    width: 100%;
    height: 40px;
    color: white;
    background-color: #111111;
    border: none;
    border-radius: 10px 10px 10px 10px;
    font-size: 24px;
    margin-top: 20px;
    padding: 5px 10px 5px 10px;
}

.form-option {
    border: none;
}

.login-input-blocked {
    background-color: #222222;
    color: #bbbbbb;
}
</style>

<div id="nav-bar-container">
    <button id="nav-bar-back-button" class="nav-bar-button"><</button>
    <button id="nav-bar-title">Części - edytuj</button>
</div>

<form action="/Clients/EditResult/" method="POST" id="login-form">
    <div>
        <input readonly="true" type="text" name="id" value="@Model.ID" class="login-input login-input-blocked"/>
    </div>
    <div>
        <input type="text" name="name" value="@Model.Name" class="login-input" id="Nazwa"/>
    </div>
    <div>
        <input type="text" name="city" value="@Model.City" class="login-input" id="Miasto"/>
    </div>
    <div>
        <input type="text" name="phone" value="@Model.Phone" class="login-input" id="Telefon"/>
    </div>
    <div>
        <input type="text" name="email" value="@Model.Email" class="login-input" id="Email"/>
    </div>
    <div>
        <input type="text" name="nip" value="@Model.Nip" class="login-input" id="NIP"/>
    </div>
    <div>
        <input type="text" name="province" value="@Model.Province" class="login-input" id="Województwo"/>
    </div>
    <div>
        <input type="text" name="address" value="@Model.Address" class="login-input" id="Ulica"/>
    </div>
    <div>
        <input type="text" name="postalCode" value="@Model.PostalCode" class="login-input" id="Kod pocztowy"/>
    </div>
    <input type="submit" value="ok" class="login-submit"/>
</form>

<script>
    $(document).ready(function() {
        $("#nav-bar-back-button").click(function() {
            window.location = "/Clients/";
        });

        $(".login-input-blocked").click(function(event) {
            event.preventDefault();
        });
    });
</script>
